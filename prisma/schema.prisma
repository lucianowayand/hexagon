generator client {
  provider = "prisma-client-js"
  binaryTargets = ["debian-openssl-3.0.x", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Attribute {
  id    Int    @id @default(autoincrement())
  name  String
  value String
}

model Project {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  icon        String
  git         String
}

model Passwords {
  id        String   @id
  platform  String
  website   String
  user      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  name       String
  firebaseId String  @unique
  admin      Boolean @default(false)
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  PostId    Int
  UserId    Int
}

model Post {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  content     String
  UserId      Int
}

model Journal {
  id        Int      @id @default(autoincrement())
  UserId    Int
  entry     String
  createdAt DateTime @default(now())
}
